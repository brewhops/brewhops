{
  "version": 2,
  "name": "brewhops",
  "env": {
    "IS_NOW": "@is_now",
    "NODE_ENV": "production",
    "DATABASE_URL": "@database_url"
  },
  "builds": [
    {
      "src": "app/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/src/routes/**/*.ts",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api/([^/]*)/(.*)",
      "dest": "api/src/routes/$1/index.ts"
    },

    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "/app/static/$1"
    },
    { "src": "/favicon.ico", "dest": "/app/favicon.ico" },
    { "src": "/asset-manifest.json", "dest": "/app/asset-manifest.json" },
    { "src": "/manifest.json", "dest": "/app/manifest.json" },
    { "src": "/precache-manifest.(.*)", "dest": "/app/precache-manifest.$1" },
    {
      "src": "/service-worker.ts",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/app/service-worker.ts"
    },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/app/index.html"
    }
  ]
}